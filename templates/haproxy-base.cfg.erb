global
<% @global_options_merged.sort.each do |key,val| -%>
<%# Skip options whose value is the special string "absent" -%>
<% next if val == 'absent' -%>
<% if val.is_a?(Array) -%>
<% val.each do |item| -%>
  <%= key %>  <%= item %>
<% end -%>
<% else -%>
  <%= key %>  <%= val %>
<% end -%>
<% end -%>

