backend <%= name %>
<% if @mode -%>
  mode  <%= @mode %>
<% end -%>
<% options.sort.each do |key, val| -%>
<% Array(val).each do |item| -%>
  <%= key %>  <%= item %>
<% end -%>
<% end -%>
<% Array(ipaddresses).zip(Array(server_names)).each do |ipaddress,host| -%>
<% Array(ports).each do |ports| -%>
  server <%= host %> <%= ipaddress %>:<%= ports %> <%= if define_cookies then "cookie " + host end
%><% if @check %> check <% end %>
<% end -%>
<% end -%>

